{
    "name": "Hydrate",
    "version": "2.0",
    "manifest_version": 3,
    "description": "A chrome extension which reminds users every hour to get hydrated and fix their posture during long hours of Work From Home.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Hydrate"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "alarms",
        "notifications"
    ]
}
